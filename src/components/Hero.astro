---
import { siteConfig } from "../config";
---

<div
  id="hero"
  class="relative isolate overflow-hidden bg-gradient-to-br from-red-900/05 via-white to-amber-950/15 py-24 md:h-screen"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Enhanced gradient overlay with multiple layers -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: 
      radial-gradient(ellipse 600px 800px at 30% 20%, ${siteConfig.accentColor}15 0%, transparent 50%),
      radial-gradient(ellipse 400px 600px at 80% 70%, ${siteConfig.accentColor}12 0%, transparent 50%),
      linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(248, 250, 252, 0.9) 100%)`}
  >
  </div>
  
  <!-- Geometric pattern overlay -->
  <div class="absolute inset-0 -z-10 opacity-[0.03]" style={`background-image: 
    radial-gradient(circle at 25% 25%, ${siteConfig.accentColor} 2px, transparent 2px),
    radial-gradient(circle at 75% 75%, ${siteConfig.accentColor} 1px, transparent 1px);
    background-size: 60px 60px, 40px 40px;`}>
  </div>
  <svg
    aria-hidden="true"
    class="absolute inset-0 -z-10 size-full stroke-gray-100 [mask-image:radial-gradient(80%_80%_at_top_right,white,transparent)]"
  >
    <defs>
      <!-- Modern grid pattern -->
      <pattern
        x="50%"
        y={-1}
        id="modern-grid"
        width={120}
        height={120}
        patternUnits="userSpaceOnUse"
      >
        <path d="M.5 120V.5H120" fill="none" stroke-width="0.5" opacity="0.3"></path>
      </pattern>
      
      <!-- Enhanced programming symbols pattern -->
      <pattern
        id="programming-symbols-modern"
        x="0"
        y="0"
        width="400"
        height="400"
        patternUnits="userSpaceOnUse"
      >
        <!-- ML/AI related symbols -->
        <text
          x="60"
          y="60"
          fill={siteConfig.accentColor}
          font-family="Inter, sans-serif"
          font-size="32"
          font-weight="400"
          transform="rotate(-12)"
          opacity="0.9">âˆ‡</text>
        <text
          x="180"
          y="100"
          fill={siteConfig.accentColor}
          font-family="Inter, sans-serif"
          font-size="28"
          font-weight="400"
          transform="rotate(8)"
          opacity="0.8">Î»</text>
        <text
          x="320"
          y="80"
          fill={siteConfig.accentColor}
          font-family="Inter, sans-serif"
          font-size="26"
          font-weight="400"
          transform="rotate(-5)"
          opacity="0.9">Î£</text>
        <text
          x="100"
          y="200"
          fill={siteConfig.accentColor}
          font-family="Inter, sans-serif"
          font-size="30"
          font-weight="400"
          transform="rotate(15)"
          opacity="0.7">âˆˆ</text>
        <text
          x="350"
          y="180"
          fill={siteConfig.accentColor}
          font-family="Inter, sans-serif"
          font-size="24"
          font-weight="400"
          transform="rotate(-8)"
          opacity="0.8">âˆ€</text>
        <text
          x="40"
          y="320"
          fill={siteConfig.accentColor}
          font-family="Inter, sans-serif"
          font-size="28"
          font-weight="400"
          transform="rotate(10)"
          opacity="0.7">Î¸</text>
        <text
          x="240"
          y="280"
          fill={siteConfig.accentColor}
          font-family="Inter, sans-serif"
          font-size="26"
          font-weight="400"
          transform="rotate(-15)"
          opacity="0.8">Î±</text>
        
        <!-- Programming symbols -->
        <text
          x="150"
          y="40"
          fill={siteConfig.accentColor}
          font-family="Inter, sans-serif"
          font-size="22"
          font-weight="500"
          transform="rotate(-10)"
          opacity="0.7">&lt;/&gt;</text>
        <text
          x="280"
          y="140"
          fill={siteConfig.accentColor}
          font-family="Inter, sans-serif"
          font-size="20"
          font-weight="500"
          transform="rotate(12)"
          opacity="0.7">{}</text>
        <text
          x="50"
          y="160"
          fill={siteConfig.accentColor}
          font-family="Inter, sans-serif"
          font-size="24"
          font-weight="500"
          transform="rotate(5)"
          opacity="0.6">=&gt;</text>
        <text
          x="200"
          y="350"
          fill={siteConfig.accentColor}
          font-family="Inter, sans-serif"
          font-size="22"
          font-weight="500"
          transform="rotate(-15)"
          opacity="0.7">[]</text>
        <text
          x="300"
          y="320"
          fill={siteConfig.accentColor}
          font-family="Inter, sans-serif"
          font-size="20"
          font-weight="500"
          transform="rotate(10)"
          opacity="0.6">()</text>
      </pattern>
    </defs>
    <rect
      fill="url(#programming-symbols-modern)"
      width="100%"
      height="100%"
      opacity="0.25"></rect>
    <rect
      fill="url(#modern-grid)"
      width="100%"
      height="100%"
      stroke-width={0}></rect>
  </svg>
  <div class="h-full mx-auto p-8 sm:p-12 md:p-24 flex items-center">
    <div>
      <h2
        class="text-pretty text-xl sm:text-2xl md:text-5xl font-bold tracking-tight text-gray-700 animate-fade-in"
      >
        Hello! ðŸ‘‹
      </h2>
      <h1
        class="mt-6 sm:mt-8 md:mt-10 text-pretty text-4xl sm:text-5xl md:text-6xl lg:text-8xl font-bold tracking-tight text-gray-800 animate-fade-in animation-delay-200"
      >
        I'm <span style={{ color: siteConfig.accentColor }}
          >{siteConfig.name}</span
        >
      </h1>
      <p
        class="mt-4 sm:mt-6 md:mt-8 text-pretty text-base sm:text-lg md:text-xl/8 font-medium text-gray-600 animate-fade-in animation-delay-400"
      >
        {siteConfig.title}
      </p>
    </div>
  </div>
  <div
    class="absolute bottom-0 left-0 right-0 p-8 sm:p-12 md:p-24 flex gap-x-6 sm:gap-x-8 md:gap-x-10 text-gray-700 animate-fade-in animation-delay-600"
  >
    {
      siteConfig.social?.email && (
        <a
          href={`mailto:${siteConfig.social.email}`}
          aria-label="Email"
          class="group p-3 rounded-full bg-white/50 backdrop-blur-sm border border-gray-200/50 transition-all duration-300 hover:bg-white hover:border-red-300 hover:shadow-lg hover:-translate-y-1 hover:scale-110"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-5 w-5 sm:h-6 sm:w-6 md:h-7 md:w-7 text-gray-600 group-hover:text-red-600 transition-colors duration-300"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
            <path d="M3 7l9 6l9 -6" />
          </svg>
        </a>
      )
    }
    {
      siteConfig.social?.linkedin && (
        <a
          href={siteConfig.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          class="group p-3 rounded-full bg-white/50 backdrop-blur-sm border border-gray-200/50 transition-all duration-300 hover:bg-white hover:border-red-300 hover:shadow-lg hover:-translate-y-1 hover:scale-110"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-5 w-5 sm:h-6 sm:w-6 md:h-7 md:w-7 text-gray-600 group-hover:text-red-600 transition-colors duration-300"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M8 11v5" />
              <path d="M8 8v.01" />
              <path d="M12 16v-5" />
              <path d="M16 16v-3a2 2 0 1 0 -4 0" />
              <path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z" />
            </>
          </svg>
        </a>
      )
    }
    {
      siteConfig.social?.twitter && (
        <a
          href={siteConfig.social.twitter}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Twitter"
          class="group p-3 rounded-full bg-white/50 backdrop-blur-sm border border-gray-200/50 transition-all duration-300 hover:bg-white hover:border-red-300 hover:shadow-lg hover:-translate-y-1 hover:scale-110"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-5 w-5 sm:h-6 sm:w-6 md:h-7 md:w-7 text-gray-600 group-hover:text-red-600 transition-colors duration-300"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M4 4l11.733 16h4.267l-11.733 -16z" />
              <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772" />
            </>
          </svg>
        </a>
      )
    }
    {
      siteConfig.social?.github && (
        <a
          href={siteConfig.social.github}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          class="group p-3 rounded-full bg-white/50 backdrop-blur-sm border border-gray-200/50 transition-all duration-300 hover:bg-white hover:border-red-300 hover:shadow-lg hover:-translate-y-1 hover:scale-110"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-5 w-5 sm:h-6 sm:w-6 md:h-7 md:w-7 text-gray-600 group-hover:text-red-600 transition-colors duration-300"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
            </>
          </svg>
        </a>
      )
    }
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }

  .animation-delay-600 {
    animation-delay: 0.6s;
  }
</style>
