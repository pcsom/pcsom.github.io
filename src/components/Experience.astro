---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Experience
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="relative">
              {siteConfig.experience.map((exp, index) => {
                return (
                <div class="relative mb-16 last:mb-0 group">
                  {/* Enhanced timeline dot */}
                  <div
                    class="absolute left-1/2 -top-3 w-5 h-5 rounded-full -translate-x-1/2 z-20 transition-all duration-500 shadow-lg group-hover:scale-125"
                    style={`background: linear-gradient(135deg, ${siteConfig.accentColor}, #dc2626); box-shadow: 0 0 0 4px rgba(130, 5, 5, 0.1)`}
                  />

                  {/* Enhanced connecting line */}
                  {index < siteConfig.experience.length - 1 && (
                    <div 
                      class="absolute left-1/2 bottom-0 w-0.5 h-16 -translate-x-1/2 translate-y-full z-10 transition-all duration-300"
                      style={`background: linear-gradient(to bottom, ${siteConfig.accentColor}80, ${siteConfig.accentColor}30, transparent)`} 
                    />
                  )}

                  {/* Enhanced experience card */}
                  <div class="bg-gradient-to-br from-red-900/10 to-amber-900/10 rounded-2xl shadow-sm border border-gray-200 p-6 sm:p-8 md:p-10 transition-all duration-500 hover:shadow-xl hover:from-red-900/15 hover:to-amber-900/15 hover:border-amber-950 hover:-translate-y-1">
                    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-6">
                      <div class="flex-1">
                        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-2">
                          {exp.title}
                        </h3>
                        <p
                          class="text-lg sm:text-xl font-semibold mb-1"
                          style={`color: ${siteConfig.accentColor}`}
                        >
                          {exp.company}
                        </p>
                      </div>
                      <span class="text-sm sm:text-base text-gray-500 mt-2 sm:mt-0 px-3 py-1 bg-gray-100 rounded-full font-medium">
                        {exp.dateRange}
                      </span>
                    </div>

                    {exp.bullets.length > 0 && (
                      <ul class="space-y-3">
                        {exp.bullets.map((bullet) => (
                          <li class="flex items-start group/item">
                            <div 
                              class="inline-block w-2 h-2 rounded-full mt-2.5 mr-4 flex-shrink-0 transition-all duration-300 group-hover/item:scale-125" 
                              style={`background-color: ${siteConfig.accentColor}`}
                            />
                            <span class="text-base sm:text-lg text-gray-600 leading-relaxed">
                              {bullet}
                            </span>
                          </li>
                        ))}
                      </ul>
                    )}
                  </div>
                </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
